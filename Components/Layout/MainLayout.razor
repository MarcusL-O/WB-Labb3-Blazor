@inherits LayoutComponentBase

<div class="@ContainerClass">
    <div class="container p-4" style="max-width: 800px;">
        <!-- Översta navigationsraden -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Vänster: Home-knapp -->
            <NavLink href="/" class="custom-navlink">Home</NavLink>

            <!-- Höger: Certifikat, Erfarenheter & Light/Dark Mode-knappar -->
            <div>
                <NavLink href="/certifikat" class="custom-navlink">Certifikat</NavLink>
                <NavLink href="/erfarenheter" class="custom-navlink">Erfarenheter</NavLink>

                <!-- Dark/Light Mode-knapp -->
                <button class="mode-toggle btn btn-link" @onclick="ToggleNightMode">
                    <img src="@ModeImageUrl" alt="Toggle mode" style="width:30px; height:30px;" />
                </button>
            </div>
        </div>

        <!-- Rendera sidans innehåll -->
        <main class="content">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsDarkMode = false;
    
    private string ContainerClass => IsDarkMode ? "dark-mode" : "light-mode";
    private string ModeImageUrl => IsDarkMode ? "images/DarkMode.png" : "images/LightMode.png";

    private void ToggleNightMode()
    {
        IsDarkMode = !IsDarkMode;
        StateHasChanged(); // Uppdaterar UI
    }
}







