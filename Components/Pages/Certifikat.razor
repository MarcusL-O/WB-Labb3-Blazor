@page "/certifikat"

<div class="container mt-4">
    <h2 class="text-left mb-4">Certifikat</h2>
    <div class="row">
        <!-- Exempel på ett klart certifikat: AZ-900 -->
        <div class="col-md-4 mb-3">
            <div class="card certificate-card">
                <div class="card-body text-center">
                    <!-- Bilden är länkad -->
                    <a href="https://learn.microsoft.com/api/credentials/share/en-us/MarcusLisOlivebring-4473/FAC4988FCC2323A?sharingId=EE70EA8119EE143" target="_blank">
                        <img src="images/Azure.png" alt="AZ-900" class="img-fluid certificate-img mb-3" style="max-height: 100px;" />
                    </a>
                    <h5 class="card-title">AZ-900</h5>
                    <p class="card-text">Done</p>
                    <p class="card-text"><small class="text-muted">2025-01-15</small></p>
                </div>
            </div>
        </div>
        <!-- Exempel på ett pågående certifikat: AZ-104 -->
        <div class="col-md-4 mb-3">
            <div class="card certificate-card">
                <div class="card-body text-center">
                    <!-- Ingen länk om certifikatet är pågående, men du kan lägga till en länk om det behövs -->
                    <img src="images/Azure.png" alt="AZ-104" class="img-fluid certificate-img mb-3" style="max-height: 100px;" />
                    <h5 class="card-title">AZ-104</h5>
                    <p class="card-text">Pågående</p>
                    <!-- Datum visas inte om certifikatet inte är klart -->
                </div>
            </div>
        </div>
    </div>
</div>
